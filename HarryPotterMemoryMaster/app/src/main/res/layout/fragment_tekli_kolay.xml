<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.TekliKolayFragment">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPuan1">

        <ImageView
            android:id="@+id/imageKart1"
            android:layout_width="140dp"
            android:layout_height="180dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:src="@drawable/kartarka"
             />

        <ImageView
            android:id="@+id/imageKart3"
            android:layout_width="140dp"
            android:layout_height="180dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:src="@drawable/kartarka" />

        <ImageView
            android:id="@+id/imageKart4"
            android:layout_width="140dp"
            android:layout_height="180dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:src="@drawable/kartarka"
            app:layout_constraintEnd_toEndOf="@+id/imageKart2" />

        <ImageView
            android:id="@+id/imageKart2"
            android:layout_width="140dp"
            android:layout_height="180dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:src="@drawable/kartarka" />

    </GridLayout>

    <ImageView
        android:id="@+id/music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/musicon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textPuan1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="Puan: 0"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/music"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSure" />

    <TextView
        android:id="@+id/textSure"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:text="SÃ¼re: 45"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/music"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/notDefterTK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/notdefter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>